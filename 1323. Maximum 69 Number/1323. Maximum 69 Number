class Solution {
    public int maximum69Number (int num) {
        if(num == 9999) return num;  // Edge case: already maximum
        
        int num1 = num;
        int[] a = new int[4];  // max 4 digits as per constraints
        int count = a.length - 1;
        
        // Extract digits into array
        while(num1 > 0){
            a[count] = num1 % 10;
            num1 = num1 / 10;
            count--;
        }
       
        // Change the first 6 to 9
        for(int i = 0; i < a.length; i++){
            if(a[i] == 6){
                a[i] = 9;
                break;
            }
        }
        
        // Reconstruct the number
        int number = 0;
        for(int i = 0; i < a.length; i++){
            number = number * 10 + a[i];
        }

        return number;
    }
}
